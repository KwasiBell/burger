    {{> header }}

<div class="all-burgers">
    <div class="favorites-section">
        <h2>Favorite Burgers</h2>
        {{#each result}} {{#if is_favorite}}
        <div class="burger" data-id="{{id}}">
            <img src="https://www.foodiecrush.com/wp-content/uploads/2017/06/Bacon-Double-Cheddar-Cheeseburger-Caramelized-Onions-foodiecrush.com-015a-683x1024-1-500x500.jpg" alt="">
            <p>{{burger_name}}</p>
            <button class="btn btn-default" data-id="{{id}}">Delete</button>
        </div>
        {{/if}} {{/each}}
    </div>


    <div class="unfavorites-section">
        <h2>Unfavorite Burgers</h2>
        {{#each result}} {{#unless is_favorite}}

        <div class="burger" data-id="{{id}}">
            <img src="https://tmbidigitalassetsazure.blob.core.windows.net/secure/RMS/attachments/37/1200x1200/Bacon-Cheeseburger-Slider-Bake_EXPS_GBBZ19_197428_E11_29_2b.jpg" alt="">
            <p>{{burger_name}}</p>
            <button class="btn btn-default" data-id="{{id}}">Delete</button>

        </div>
        {{/unless}} {{/each}}
    </div>
</div>
